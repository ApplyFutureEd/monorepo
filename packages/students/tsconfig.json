{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["dom", "es2017"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
            "@applyfuture/students/components/*": ["src/components/*"],
            "@applyfuture/students/pages/*": ["src/pages_/*"],
            "@applyfuture/students/styles/*": ["src/styles/*"]
        }
    },
    "exclude": [".next", "node_modules", "public"],
    "include": ["**/*.ts", "**/*.tsx"]
}
