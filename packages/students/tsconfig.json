{
    "extends": "./../../tsconfig.json",
    "compilerOptions": {
        "paths": {
            "@components/*": ["src/components/*"],
            "@graphql/*": ["src/graphql/*"],
            "@models": ["src/models/index"],
            "@pages/*": ["src/pages_/*"],
            "@styles/*": ["src/styles/*"],
            "@tests/*": ["src/tests/*"],
            "@utils/*": ["src/utils/*"]
        }
    },
    "exclude": [".next", "node_modules", "public"],
    "include": ["**/*.ts", "**/*.tsx"]
}
