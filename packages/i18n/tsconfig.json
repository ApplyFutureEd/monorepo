{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["dom", "es2017"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
            "@assets/*": ["src/assets/*"],
            "@components/*": ["src/components/*"],
            "@data/*": ["src/data/*"],
            "@locales/*": ["locales/*"],
            "@pages/*": ["src/pages/*"],
            "@styles/*": ["src/styles/*"]
        }
    },
    "exclude": [".next", "node_modules", "public"],
    "include": ["**/*.ts", "**/*.tsx", "../ui/src/alert/Alert.tsx"]
}
